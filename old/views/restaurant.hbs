{{>header}}
<section class="main container-fluid m-0 d-flex flex-column gap-2 min-vh-100">
		<div class="row pt-0">
			{{{imgs}}}
		</div>
		<div class="row gap-0 px-0 mx-4">
			<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
				<h1 class="my-0">Healthy Sands</h1>
				<div class="d-flex gap-1 align-items-center">
					{{{starRating}}}
				<div class="rating-text mx-2">{{rating}} / 5</div>
				</div>
			</div>
			<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 d-flex align-items-center gap-2">
					
					<button class="btn btn-create-review btn-text btn-md" data-bs-toggle="modal" data-bs-target="#modal">Create a review</button>

					<div class="btn-group">
					<div class="dropdown">
						<button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						  Filter By
						</button>
						<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
						  <a class="dropdown-item" href="#">Newest to Oldest</a>
						  <a class="dropdown-item" href="#">Oldest to Newest</a>
						  <a class="dropdown-item" href="#">Higher Ratings to Lower Ratings</a>
						  <a class="dropdown-item" href="#">Lower Ratings to Higher Ratings</a>
						</div>
					</div>
				</div>
			
					<div class="modal fade" id="modal">
						<div class="modal-dialog">
							<div class="modal-content">
								
								<div class="modal-header">Review
								<button class="btn-close" data-bs-dismiss="modal"
								data-bs-target="modal"></button>
								</div>

								<div class="modal-body">  
									<form>
										<div class="form-group">
											<div class="d-flex gap-1 align-items-center">
												<i class="bi bi-star-fill rate-star-inter"></i>
												<i class="bi bi-star-fill  rate-star-inter"></i>
												<i class="bi bi-star-fill  rate-star-inter"></i>
												<i class="bi bi-star-fill  rate-star-inter"></i>
												<i class="bi bi-star-fill  rate-star-inter"></i>
											</div>
											<label for="message-text" class="col-form-label">Title:</label>
											<input type="text" class="form-control" id="review-title-text"></input>
										  	<label for="message-text" class="col-form-label">Body:</label>
										  	<textarea class="form-control" id="review-body-text"></textarea>
											<div>
												<label class="form-label mb-0 mt-1" for="create-review-img">Upload pictures</label>
												<input type="file" class="form-control" id="create-review-img"/>
											</div>
										</div>
									</form>
								</div>
								<div class="modal-footer">
									<button type="button" class="btn" data-bs-dismiss="modal" data-bs-target="modal" >Cancel</button>
									<button type="button" class="btn" data-bs-dismiss="modal">Submit</button>
								</div>
							</div>
						</div>
					</div>
			</div>
		</div>

		<div class="row gap-0 px-0 mx-4">
			<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
				<div class="container details">
					Address: {{address}}
					<br>
					Number: {{number}}
					<br>
					Operating Hours: {{operatingHours}}
				</div>
			</div>
			<!--review pane -->
			<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
				<div class="col-sm">
					<div class="comment p-0"></div> <!-- empty comment purely for the border, to solve fencepost problem -->
					
					{{{comments}}}
				</div><!--review 1>
				
			</div><!--end pane -->
		</div>
</section>

{{>footer}}