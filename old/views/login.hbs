{{>header}}

<section class="container column my-3 d-flex flex-column min-vh-100">
  <div>
    <h1>Log In</h1>
  </div>

  <div class="my-2 mx-3">
      <form name="login" class="form vstack login-form gap-1" action="./index-logged-in.html">
        <input type="text" id="email" placeholder="Email" class="form-control" required>
        <input type="password" id="password" placeholder="Password" class="form-control" required>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault">
            Remember Me
          </label>
        </div>
        <a href='index-logged-in.html'> 
          <button id="" type="submit" class="btn btn-success" >Login</button>
        </a>
      </form>
  </div>

  <div>
    Don't have an account? <a href="register.html" class="account">Sign up</a> for one now!
  </div>

  </section>


{{>footer}}