      function countNum(words){
  	let numCount=0;
  	for(let i=0; i<words.length; i++){
    	if(words[i]>='0' && words[i]<='9')
          numCount++;
    }
    return numCount;
    }

    function countSmall(words){
  	let numCount=0;
  	for(let i=0; i<words.length; i++){
    	if(words[i]>='a' && words[i]<='z')
          numCount++;
    }
    return numCount;
    }

    function countBig(words){
  	let numCount=0;
  	for(let i=0; i<words.length; i++){
    	if(words[i]>='A' && words[i]<='Z')
          numCount++;
    }
    return numCount;
    }

